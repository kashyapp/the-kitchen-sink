source /etc/screenrc
startup_message off
hardstatus on
hardstatus alwayslastline "%-Lw%{= BW}%51>%n%f* %t%{-}%+Lw%< %{= Gk}%=%c:%s %{= Yk}%d/%M/%Y"
vbell off
defutf8 on
defscrollback 10000
autodetach on
multiuser on
shelltitle "$ |bash"
